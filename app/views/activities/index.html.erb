<p id="notice"><%= notice %></p>

<h1 class="abel">Listing Activities</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Cost</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.id %></td>
        <td><%= activity.name %></td>
        <td><%= number_to_currency activity.cost %></td>
        <td><%= distance_of_time_in_words(activity.duration*3600) %></td>
        <td><span class="glyphicon glyphicon-eye-open"></span> <%= link_to 'Show', activity %></td>
        <td><span class="glyphicon glyphicon-pencil"></span> <%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><span class="glyphicon glyphicon-remove"></span> <%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'New Activity', new_activity_path, class: "btn btn-info" %>
</p>

<hr />

<div class="center-it">
  <% @pictures.shuffle.each do |pic| %>
    <%= image_tag pic, alt: "adventures", width: "400" %>
  <% end %>
</div>
