<p id="notice"><%= notice %></p>

<h1 class="abel">Listing States</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Capital</th>
      <th>Population</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.id %></td>
        <td><%= state.name %></td>
        <td><%= state.capital %></td>
        <td><%= number_with_delimiter state.population %></td>
        <td><span class="glyphicon glyphicon-eye-open"></span> <%= link_to 'Show', state %></td>
        <td><span class="glyphicon glyphicon-pencil"></span> <%= link_to 'Edit', edit_state_path(state) %></td>
        <td><span class="glyphicon glyphicon-remove"></span> <%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New State', new_state_path, class: "btn btn-info"  %>
